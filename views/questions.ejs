<!-- views/questions.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Questions</title>
</head>
<body>
    <h1>Questions List</h1>
    <% questions.forEach((question) => { %>
        <div>
            <h4><%= question.id %></h4>
            <h2><%= question.title %></h2>
            <p><%= question.description %></p>
            <h3>Test Cases:</h3>
            <ul>
                <% question.testCases.forEach((testCase) => { %>
                    <li>Input: <%= testCase.input %>, Output: <%= testCase.output %></li>
                <% }) %>
            </ul>
        </div>
    <% }) %>
    <h1>Submit Problem Solution</h1>
    <form action="/submissions" method="post">
        <label for="question">Select a Question:</label>
        <select id="question" name="questionID" required>
            <option value="" disabled selected>Select a question...</option>
            <% questions.forEach((question) => { %>
                <option value="<%= question.id %>"><%= question.title %></option>
            <% }) %>
        </select>
        <br>
        <label for="solution">Your Solution:</label>
        <textarea id="solution" name="solution" required></textarea>
        <br>
        <input type="submit" value="Submit Solution">
    </form>
</body>
</html>
